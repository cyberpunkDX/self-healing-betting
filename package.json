{
  "name": "self-healing-betting-backend",
  "version": "1.0.0",
  "description": "High-performance, fault-tolerant betting platform with self-healing capabilities",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "dev:api-gateway": "nodemon src/services/api-gateway/index.js",
    "dev:bet-service": "nodemon src/services/bet-service/index.js",
    "dev:user-service": "nodemon src/services/user-service/index.js",
    "dev:odds-service": "nodemon src/services/odds-service/index.js",
    "dev:wallet-service": "nodemon src/services/wallet-service/index.js",
    "dev:event-service": "nodemon src/services/event-service/index.js",
    "dev:settlement-service": "nodemon src/services/settlement-service/index.js",
    "dev:notification-service": "nodemon src/services/notification-service/index.js",
    "dev:health-monitor": "nodemon src/services/health-monitor/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:infra": "docker-compose -f infrastructure/docker/docker-compose.yml up -d postgres redis nats",
    "docker:infra:stop": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:dev": "docker-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.dev.yml up --build",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "repl": "node repl.js"
  },
  "keywords": [
    "betting",
    "microservices",
    "moleculer",
    "self-healing",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "moleculer": "^0.14.32",
    "moleculer-web": "^0.10.7",
    "moleculer-db": "^0.8.26",
    "moleculer-db-adapter-sequelize": "^0.2.17",
    "nats": "^2.19.0",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "@socket.io/redis-adapter": "^8.3.0",
    "sequelize": "^6.37.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.4.1",
    "joi": "^17.12.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
