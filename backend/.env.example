# ===========================================
# Self-Healing Betting Platform Configuration
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# Moleculer Configuration
# ===========================================
NAMESPACE=betting
NODE_ID=

# Transporter (TCP for local, NATS for production)
# Options: TCP, nats://localhost:4222
TRANSPORTER=TCP

# Cacher (Redis URL for caching)
# Leave empty to disable caching
CACHER=redis://localhost:6379

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cluster (production)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/betting

# Individual parameters (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=betting
DB_USER=postgres
DB_PASSWORD=postgres

# Connection pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_LOGGING=false

# Read replicas (production)
DB_REPLICATION_ENABLED=false
DB_WRITE_HOST=
DB_READ_HOSTS=

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# API Gateway
# ===========================================
API_PORT=3000
API_HOST=0.0.0.0

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# ===========================================
# Socket.IO Configuration
# ===========================================
SOCKET_PORT=3001
SOCKET_PATH=/socket.io
SOCKET_PING_INTERVAL=25000
SOCKET_PING_TIMEOUT=20000

# ===========================================
# AWS Configuration (Production)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# Monitoring & Observability
# ===========================================
METRICS_ENABLED=true
TRACING_ENABLED=true

# ===========================================
# Service-specific Configuration
# ===========================================

# Bet Service
BET_MAX_STAKE=100000
BET_MIN_STAKE=0.01
BET_MAX_SELECTIONS=20

# Odds Service - The Odds API (https://the-odds-api.com/)
ODDS_PROVIDER=the-odds-api
ODDS_API_KEY=your-api-key-here
ODDS_API_REGION=us
ODDS_API_BOOKMAKER=pinnacle
ODDS_SYNC_INTERVAL=60000
ODDS_POLL_INTERVAL=30000
ODDS_SPORTS=soccer_epl,basketball_nba,americanfootball_nfl

# Wallet Service
WALLET_MIN_DEPOSIT=1
WALLET_MAX_DEPOSIT=50000
WALLET_MIN_WITHDRAWAL=10
WALLET_MAX_WITHDRAWAL=50000

# Settlement Service
SETTLEMENT_BATCH_SIZE=1000
SETTLEMENT_INTERVAL=5000
